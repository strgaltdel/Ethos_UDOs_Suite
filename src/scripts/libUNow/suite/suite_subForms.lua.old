function defApplist(index)
	local apps_template = {										-- list of subwidgets /apps 
		{"Picture",8},
		{"Curve Edit",6},
		{"Model Finder",7}
	}
	if index==nil then				-- request complete array
		return apps_template
	else							-- request  app index
		return apps_template[index][2]
	end
end



